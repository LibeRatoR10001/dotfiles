#Import
import = [
    "~/.config/alacritty/themes/themes/blood_moon.toml"
]

[shell]
program = "/bin/zsh" 
args=["-l"]

##########
# WINDOW #
##########

[window]
dimensions = { columns = 96, lines = 26 }

padding = { x = 0, y = 0 }

dynamic_padding = false

decorations = "Full"

opacity = 0.7

blur = true

startup_mode = "Windowed"

dynamic_title = true

class = { instance = "Alacritty", general = "Alacritty" }

decorations_theme_variant = "None"

resize_increments = false

option_as_alt = "None"

#############
# SCROLLING #
#############

[scrolling]

history = 10000

multiplier = 3

########
# FONT #
########

[font]

normal = { family = "MonaspiceNe Nerd Font Mono", style = "Regular" }
bold = { family = "Monaspace Neon Var", style = "Bold" }
italic = { family = "Monaspace Neon Var", style = "italic" }
#blod_italic = { family = "Monaspace Neon Var", style = "Bold Italic" }

size = 16

offset = { x = 0, y = 0 }

glyph_offset = { x = 0, y = 0 }

[colors]

transparent_background_colors = true

draw_bold_text_with_bright_colors = true

