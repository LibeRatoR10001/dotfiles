# alias
alias md="mkdir -p"
alias rd="rmdir"
alias ls="ls --color"
alias ll="ls -l"
alias la="ls -al"

# yazi
function yy() {
	local tmp="$(mktemp -t "yazi-cwd.XXXXXX")"
	yazi "$@" --cwd-file="$tmp"
	if cwd="$(cat -- "$tmp")" && [ -n "$cwd" ] && [ "$cwd" != "$PWD" ]; then
		builtin cd -- "$cwd"
	fi
	rm -f -- "$tmp"
}

# astronvim
alias astronvim="NVIM_APPNAME=astronvim nvim"


